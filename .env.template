# LoungeAccessAdvisor Environment Configuration
# Copy this file to .env and update values for your deployment

# Environment settings
ENVIRONMENT=dev
AWS_DEFAULT_REGION=us-east-1

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=UserProfile-dev

# AgentCore Gateway Configuration (update after deployment)
MCP_GATEWAY_URL=https://your-gateway-url.amazonaws.com/mcp
COGNITO_CLIENT_ID=your-client-id
COGNITO_CLIENT_SECRET=your-client-secret
COGNITO_TOKEN_URL=https://your-domain.auth.us-east-1.amazoncognito.com/oauth2/token

# Bedrock Configuration
BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0
BEDROCK_REGION=us-east-1

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Lambda Configuration (for MCP tools)
LAMBDA_FUNCTION_NAME=lounge-access-mcp-dev
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=512

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Security Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Performance Configuration
DYNAMODB_READ_CAPACITY=5
DYNAMODB_WRITE_CAPACITY=5
CACHE_TTL_SECONDS=300